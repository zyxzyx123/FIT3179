{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "World Hapiness Report (2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/zyxzyx123/FIT3179/main/Data/2020_world_happiness_report.csv"
  },
  "params": [
    {
      "name": "score_slider",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 9,
        "step": 0.1,
        "name": "minimum score: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Happiness_Score > score_slider"},
    {
      "filter": {
        "field": "Country",
        "oneOf": [
          "China",
          "Finland",
          "Australia",
          "Canada",
          "United Kingdom",
          "Germany",
          "United States",
          "Mexico",
          "Italy",
          "Brazil",
          "Thailand",
          "South Korea",
          "Japan",
          "Russia",
          "Greece",
          "Malaysia",
          "Iran",
          "India",
          "Yemen"
        ]
      }
    }
  ],
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "Value",
      "type": "quantitative",
      "title": "Happiness Score"
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "sort": {"field": "Happiness_Score"}
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {"field": "Kinds", "type": "nominal"},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Value", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Happiness_Score", "type": "quantitative"}
        ]
      }
    }
  ],
  "config": {}
}